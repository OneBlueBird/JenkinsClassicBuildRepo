node
{
	stage('SCM')
	{
		echo 'Pulling source from Git repo'
		git branch: '${branch}', url:'https://github.com/OneBlueBird/DotNetClassicApps.git'
	}
	stage('Build')
	{
		echo 'Building...'
        	sh 'dotnet clean'
                sh 'dotnet restore'
		sh 'dotnet --version'
		sh 'dotnet build CloudifyClassicApps.sln'
	}
	stage('Test')
	{
		echo 'Testing...'
	}
	stage('Docker build/push')
	{
	    echo 'Building docker image...'
            docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
              def app = docker.build("virtualbinaries/dotnetcoreapps", ".").push()
         }
	}
        stage('Deploy')
        {
            echo 'Deploying...'
        }
}